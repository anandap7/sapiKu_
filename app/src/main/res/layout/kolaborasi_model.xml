<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photo_colab"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/manold"/>

        <TextView
            android:id="@+id/name_colab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/photo_colab"
            android:layout_toEndOf="@+id/photo_colab"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/harga_colab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_colab"
            android:layout_toEndOf="@+id/photo_colab"
            android:text="Harga sapi"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/jumlah_anggota_colab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/harga_colab"
            android:layout_toEndOf="@+id/photo_colab"
            android:text="Anggota kurban"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jumlah_anggota_colab"
            android:layout_toEndOf="@id/photo_colab"
            android:text="@string/question_colab"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/question"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:text="Bergabung"
            android:background="@color/colorPrimary"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>

</LinearLayout>